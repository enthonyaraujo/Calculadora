<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="317dp"
        android:background="@color/black">

        <TextView
            android:id="@+id/operacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.905"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1+1" />

        <TextView
            android:id="@+id/resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.904"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.857"
            tools:text="2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"

        android:background="@color/black"

        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/AC"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="AC"
                android:textColor="@color/blue"
                android:textSize="30dp"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/apagar"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="⌫"
                android:textColor="@color/blue"
                android:textSize="30dp"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/parenteses1"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="("
                android:textColor="@color/blue"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/parenteses2"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text=")"
                android:textColor="@color/blue"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisão"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="÷"
                android:textColor="@color/blue"
                android:textSize="30dp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sete"
                android:layout_width="5dp"
                android:layout_height="100dp"
               android:layout_margin="5dp"
                android:layout_weight="2"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oito"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nove"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicaçao"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="×"
                android:textColor="@color/blue"
                android:textSize="30dp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/quatro"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cinco"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seis"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/subtração"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="-"
                android:textColor="@color/blue"
                android:textSize="30dp" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/um"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dois"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tres"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/soma"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="+"
                android:textColor="@color/blue"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/potencia"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="x²"
                android:textColor="@color/blue"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ponto"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/igual"
                android:layout_width="5dp"
                android:layout_height="100dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle"
                android:fontFamily="sans-serif"
                android:text="="
                android:textColor="@color/blue"
                android:textSize="30dp" />
        </TableRow>

    </TableLayout>


</LinearLayout>


